#!/bin/bash

./tasks/itermocil-install

cat > "iTermocil.yml" <<EOF
windows:
  - name: $PROJECT_NAME
    root: $(pwd)
    layout: main-vertical
    panes:
      - commands:
        - nvm use
        - code .
        - clear
      - commands:
        - nvm use
        - clear
        - ./task test-watch
      - commands:
        - nvm use
        - clear
        - ./task indexgen-watch        
      - commands:
        - nvm use
        - clear
        - ./task serve
EOF

itermocil
