#!/bin/bash

cat > "itermocil.yml" <<EOF
windows:
  - name: $PROJECT_NAME
    root: $(pwd)
    layout: main-vertical
    panes:
      - commands:
        - nvm use
        - clear
      - commands:
        - nvm use
        - clear
        - ./task test-watch
      - commands:
        - nvm use
        - clear
        - ./task indexgen-watch        
      - commands:
        - nvm use
        - clear
        - ./task start
EOF

itermocil
